<script>
  $('#send').click(function() {
    sendMsg();
  });

  function runScript(e) {
    //See notes about 'which' and 'key'
    if (e.keyCode == 13) {
      sendMsg();
      return false;
    }
  }

  function sendMsg() {
    if ($('.type_msg').val() != '') {
      $.ajax({
        url: '/',
        type: 'get',
        dataType: "json",
        data: {
          messages: $('.type_msg').val()
        },success: function () {
        },error: function (error, status) {

        }
      });
    }
    $('.type_msg').val('');
  }
</script>
